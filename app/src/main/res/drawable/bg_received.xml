<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Fondo gris claro (en tema claro) o adaptativo -->
    <solid android:color="#DBDBDB" />
    <!-- Bordes redondeados -->
    <corners android:radius="12dp" />
    <!-- Opcional: un pequeÃ±o contorno -->
    <stroke
        android:width="1dp"
        android:color="?attr/colorOnSurface" />
    <!-- Padding interno -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>
