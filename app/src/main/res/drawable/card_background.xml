<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo segÃºn el atributo de superficie (se adapta a light/dark theme) -->
    <solid android:color="?attr/colorSurface" />

    <!-- Esquinas redondeadas -->
    <corners android:radius="8dp" />

    <!-- (Opcional) Sombra interna o trazo: puedes comentar si no se necesita -->
    <stroke
        android:width="1dp"
        android:color="?attr/colorOnSurface" />

    <!-- (Opcional) Padding interno si quieres separar el contenido del borde -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
