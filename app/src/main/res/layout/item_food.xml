<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nombre del alimento: solo cambiaremos el texto en preview -->
        <TextView
            android:id="@+id/tvFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alimento"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Avena (50g)" />

        <!-- Calorías / Proteína: texto de ejemplo en preview -->
        <TextView
            android:id="@+id/tvFoodInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cal: --  Prot: -- g"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            tools:text="Cal: 190  Prot: 6 g" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
